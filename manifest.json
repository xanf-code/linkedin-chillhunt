{
  "manifest_version": 3,
  "name": "Chill Hunt",
  "version": "1.0.0",
  "description": "Simple LinkedIn Job search extension",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://*.linkedin.com/*"],
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/jobs*",
        "https://*.linkedin.com/*/jobs*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
